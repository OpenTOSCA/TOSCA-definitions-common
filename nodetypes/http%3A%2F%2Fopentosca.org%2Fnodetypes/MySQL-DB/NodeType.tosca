<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Definitions targetNamespace="http://opentosca.org/nodetypes" id="winery-defs-for_nodetypes-MySQL-DB" xmlns="http://docs.oasis-open.org/tosca/ns/2011/12" xmlns:winery="http://www.opentosca.org/winery/extensions/tosca/2013/02/12" >
    <NodeType name="MySQL-DB" abstract="no" final="no" targetNamespace="http://opentosca.org/nodetypes" winery:bordercolor="#c769c9">
        <Tags>
            <Tag name="isStateful" value="true"/>
        </Tags>
        <DerivedFrom typeRef="ToscaNormativeNodeTypes:Database" xmlns:ToscaNormativeNodeTypes="http://docs.oasis-open.org/tosca/ToscaNormativeTypes/nodetypes"/>
        <winery:PropertiesDefinition elementname="MySQLDBProperties" namespace="http://opentosca.org/nodetypes">
            <winery:properties>
                <winery:key>DBName</winery:key>
                <winery:type>xsd:string</winery:type>
            </winery:properties>
            <winery:properties>
                <winery:key>DBUser</winery:key>
                <winery:type>xsd:string</winery:type>
            </winery:properties>
            <winery:properties>
                <winery:key>DBPassword</winery:key>
                <winery:type>xsd:string</winery:type>
            </winery:properties>
        </winery:PropertiesDefinition>
        <Interfaces>
            <Interface name="http://www.example.com/interfaces/lifecycle">
                <Operation name="install">
                    <InputParameters>
                        <InputParameter name="DBName" type="xsd:string" required="false"/>
                        <InputParameter name="DBUser" type="xsd:string" required="false"/>
                        <InputParameter name="DBPassword" type="xsd:string" required="false"/>
                        <InputParameter name="DBMSUser" type="xsd:string" required="false"/>
                        <InputParameter name="DBMSPassword" type="xsd:string" required="false"/>
                    </InputParameters>
                </Operation>
                <Operation name="configure">
                    <InputParameters>
                        <InputParameter name="DBName" type="xsd:string" required="false"/>
                        <InputParameter name="DBUser" type="xsd:string" required="false"/>
                        <InputParameter name="DBPassword" type="xsd:string" required="false"/>
                    </InputParameters>
                </Operation>
            </Interface>
            <Interface name="http://opentosca.org/interfaces/tests">
                <Operation name="testConnection">
                    <InputParameters>
                        <InputParameter name="DBName" type="xsd:string" required="false"/>
                        <InputParameter name="DBUser" type="xsd:string" required="false"/>
                        <InputParameter name="DBPassword" type="xsd:string" required="false"/>
                        <InputParameter name="DBMSPort" type="xsd:string" required="false"/>
                    </InputParameters>
                    <OutputParameters>
                        <OutputParameter name="Result" type="xsd:string" required="false"/>
                    </OutputParameters>
                </Operation>
            </Interface>
            <Interface name="http://opentosca.org/interfaces/state">
                <Operation name="freeze">
                    <InputParameters>
                        <InputParameter name="StoreStateServiceEndpoint" type="xsd:string" required="false"/>
                        <InputParameter name="DBName" type="xsd:string" required="false"/>
                        <InputParameter name="DBUser" type="xsd:string" required="false"/>
                        <InputParameter name="DBPassword" type="xsd:string" required="false"/>
                    </InputParameters>
                </Operation>
                <Operation name="defrost">
                    <InputParameters>
                        <InputParameter name="DBName" type="xsd:string" required="false"/>
                        <InputParameter name="DBUser" type="xsd:string" required="false"/>
                        <InputParameter name="DBPassword" type="xsd:string" required="false"/>
                        <InputParameter name="DBMSUser" type="xsd:string" required="false"/>
                        <InputParameter name="DBMSPassword" type="xsd:string" required="false"/>
                    </InputParameters>
                </Operation>
            </Interface>
        </Interfaces>
    </NodeType>
</Definitions>
